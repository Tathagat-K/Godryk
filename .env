# .env (place at project root)

# ─────────── Milvus Configuration ───────────
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=galco

# ─────────── Embedding Models ───────────
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
SPARSE_EMBEDDING_MODEL_NAME=naver/splade-cocondenser-ensembledistil
SPARSE_EMBEDDING_DEVICE=cpu
EMBEDDING_DIM=384

# ─────────── Ingestion Settings ───────────
INGEST_CHUNK_SIZE=1000
INGEST_CHUNK_OVERLAP=200
ALLOWED_FILE_EXTENSIONS=["txt","pdf","docx","csv","xlsx","json"]
